{
    "name": "odysee-2a3d-file-manager",
    "version": "1.1.12",
    "description": "A file manager for Odysee data, handling downloads, database management, and XLS to SQLite conversion.",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-packager . OdyseeFileManager --overwrite --asar --platform=win32 --arch=x64 --out=dist",
        "build": "electron-builder",
        "dist": "electron-builder",
        "postinstall": "electron-rebuild"
    },
    "author": "Summit_60",
    "license": "MIT",
    "dependencies": {
        "@electron/build-tools": "^2.0.0",
        "axios": "^1.7.9",
        "fetch": "^1.1.0",
        "p-limit": "^6.2.0",
        "sharp": "^0.33.5",
        "sqlite3": "^5.1.7",
        "xlsjs": "^1.0.1"
    },
    "devDependencies": {
        "electron": "^33.3.1",
        "electron-builder": "^24.13.3",
        "electron-packager": "^17.1.2",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.odysee.file.manager",
        "productName": "Odysee File Manager",
        "files": [
            "src/**/*",
            "node_modules/**/*",
            "package.json",
            "package-lock.json"
        ],
        "extraResources": [
            {
                "from": "src/preload.js",
                "to": "preload.js"
            },
            {
                "from": "src/assets/icon.ico",
                "to": "icon.ico"
            },
            {
                "from": "src/utils/lbrynet.exe",
                "to": "utils/lbrynet.exe"
            }
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "src/assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Odysee File Manager",
            "artifactName": "OdyseeFileManager-Setup-${version}.exe"
        }
    }
}
